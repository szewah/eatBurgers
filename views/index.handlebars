<h3 class="center-align">Eat-Da-Burger</h3>


{{!-- add a burger --}}

<div class="container">
    <div class="row">
        <div id="available" class="col s6 m6 l6">
            <h5>Ready to eat</h5>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                       <li>{{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="post">
                            <button type="submit" class="btn waves-effect waves-light btn-small">Devour it</button>
                        </form>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div id="devoured" class="col s6 m6 l6">
            <h5>Devoured</h5>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                    <li>{{this.burger_name}}</li>
                        <form action="/{{this.id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn waves-effect waves-light btn-small">
                                <i class="material-icons">delete</i>
                            </button>
                        </form>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>






